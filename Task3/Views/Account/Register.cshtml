@model Task3.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div id="signupbox" margin-top:50px" class="mainbox col-md-6 col-sm-8">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">Register</div>
                    </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label for="Username" class="col-md-3 control-label">Userame</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-md-3 control-label" style="margin-top: 10px">Password</label>
                        <div class="col-md-9" style="margin-top: 10px">
                            @Html.EditorFor(model => model.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-md-3 control-label" style="margin-top: 5px">Confirm password</label>
                        <div class="col-md-9" style="margin-top: 10px">
                            @Html.EditorFor(model => model.PasswordConfirm)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Register</button>
                            <span style="margin-left:8px;"></span>
                        </div>
                    </div>
                    </div>
            }
        </div>
        </div>
    </div>
